{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "angular-base": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "polyfills": "src/polyfills.ts",
            "stylePreprocessorOptions": {
              "includePaths": ["src"]
            },
            "assets": ["src/assets", "src/favicon.ico", "src/manifest.json"],
            "styles": ["src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "local": {
              "aot": true,
              "sourceMap": false,
              "progress": true,
              "showCircularDependencies": true,
              "statsJson": true
            },
            "local-no-aot": {
              "aot": false,
              "sourceMap": false,
              "progress": true,
              "showCircularDependencies": true,
              "statsJson": true
            },
            "production": {
              "optimization": true,
              "aot": true,
              "sourceMap": false,
              "vendorChunk": true,
              "commonChunk": true,
              "progress": false,
              "extractCss": true,
              "outputHashing": "all",
              "extractLicenses": true,
              "showCircularDependencies": false,
              "buildOptimizer": true,
              "namedChunks": true,
              "serviceWorker": true,
              "ngswConfigPath": "src/ngsw-config.json",
              "statsJson": false,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "angular-base:build",
            "host": "localhost"
          },
          "configurations": {
            "local": {
              "browserTarget": "angular-base:build:local"
            },
            "local-no-aot": {
              "browserTarget": "angular-base:build:local-no-aot"
            },
            "production": {
              "browserTarget": "angular-base:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "angular-base:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "scripts": [],
            "styles": ["src/styles.scss"],
            "assets": ["src/assets", "src/favicon.ico", "src/manifest.json"]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["src/tsconfig.app.json", "src/tsconfig.spec.json"],
            "exclude": ["**/node_modules/**"],
            "fix": true,
            "typeCheck": true
          }
        },
        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist-server",
            "main": "src/main.server.ts",
            "tsConfig": "src/tsconfig.server.json",
            "stylePreprocessorOptions": {
              "includePaths": ["src"]
            }
          },
          "configurations": {
            "production": {
              "progress": false,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "app-shell": {
          "builder": "@angular-devkit/build-angular:app-shell",
          "options": {
            "browserTarget": "angular-base:build",
            "serverTarget": "angular-base:server",
            "route": "shell"
          },
          "configurations": {
            "production": {
              "browserTarget": "angular-base:build:production",
              "serverTarget": "angular-base:server:production"
            }
          }
        }
      }
    },
    "angular-base-e2e": {
      "root": "",
      "sourceRoot": "",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "angular-base:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["e2e/tsconfig.e2e.json"],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  },
  "defaultProject": "angular-base",
  "schematics": {
    "@schematics/angular:component": {
      "changeDetection": "OnPush",
      "prefix": "ac",
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "ac"
    }
  }
}
