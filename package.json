{
  "name": "angular-base",
  "version": "0.0.0",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "prettier": "pretty-quick",
    "lite-server": "lite-server",
    "build": "ng build --configuration local",
    "build-prod": "ng run angular-base:app-shell --configuration production",
    "build-prod-no-ssr": "ng build --configuration production",
    "ci": "yarn lint && yarn test",
    "ci-prod": "yarn ci && yarn build-prod",
    "ci-test": "jest --maxWorkers=4 --ci --coverage --coverageReporters=\"text\" --config jest.json",
    "prod": "yarn ci-prod && yarn lite-server",
    "ng": "ng",
    "start": "ng serve --configuration local --port 5201",
    "start-no-aot": "ng serve --configuration local-no-aot --port 5201",
    "start-prod": "ng serve --configuration production --port 6201",
    "lint": "yarn lint-ts && yarn lint-styles",
    "lint-ts": "ng lint",
    "lint-styles": "stylelint \"**/*.scss\" --fix",
    "test": "jest --config jest.json",
    "test-clear": "jest --clearCache",
    "test-report": "jest --coverage --coverageReporters=\"html\" --config jest.json",
    "tdd": "jest --watch --config jest.json",
    "e2e": "ng e2e",
    "docs": "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ./docs -t --theme stripe --disableCoverage --hideGenerator -n \"Angular Base Documentation\"",
    "deploy": "./node_modules/.bin/firebase deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "8.0.1",
    "@angular/cdk": "8.0.0",
    "@angular/common": "8.0.1",
    "@angular/compiler": "8.0.1",
    "@angular/core": "8.0.1",
    "@angular/flex-layout": "8.0.0-beta.26",
    "@angular/forms": "8.0.1",
    "@angular/material": "8.0.0",
    "@angular/material-moment-adapter": "8.0.0",
    "@angular/platform-browser": "8.0.1",
    "@angular/platform-browser-dynamic": "8.0.1",
    "@angular/router": "8.0.1",
    "@angular/service-worker": "8.0.1",
    "@ngrx/effects": "8.0.1",
    "@ngrx/router-store": "8.0.1",
    "@ngrx/store": "8.0.1",
    "@ngrx/store-devtools": "8.0.1",
    "classlist.js": "1.1.20150312",
    "core-js": "2.6.9",
    "hammerjs": "2.0.8",
    "moment": "2.24.0",
    "rxjs": "6.5.2",
    "zone.js": "0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.800.3",
    "@angular/cli": "8.0.3",
    "@angular/compiler-cli": "8.0.1",
    "@angular/language-service": "8.0.1",
    "@angular/platform-server": "8.0.1",
    "@compodoc/compodoc": "1.1.9",
    "@nguniversal/module-map-ngfactory-loader": "7.1.1",
    "@types/jest": "24.0.13",
    "@types/node": "12.0.4",
    "codelyzer": "5.1.0",
    "firebase-tools": "6.11.0",
    "husky": "2.3.0",
    "jasmine-core": "3.4.0",
    "jasmine-spec-reporter": "4.2.1",
    "jest": "23.6.0",
    "jest-preset-angular": "6.0.2",
    "lite-server": "2.5.3",
    "prettier": "1.17.1",
    "pretty-quick": "1.11.0",
    "protractor": "5.4.2",
    "rxjs-tslint-rules": "4.23.2",
    "stylelint": "10.0.1",
    "stylelint-config-standard": "18.3.0",
    "@types/jasmine": "3.3.13",
    "@types/jasminewd2": "2.0.6",
    "@types/lodash-es": "4.17.3",
    "ts-node": "8.3.0",
    "tslint": "5.17.0",
    "tslint-consistent-codestyle": "1.15.1",
    "typescript": "3.4.5"
  }
}
