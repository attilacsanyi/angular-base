{
  "name": "angular-base",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "lite-server": "lite-server",
    "build": "ng build",
    "build-prod": "ng build --prod --named-chunks --sourcemaps",
    "ci": "npm run lint && npm run ci-test && npm run build-prod && npm run sw",
    "prod": "npm run ci && npm run lite-server",
    "ci-test": "jest --coverage",
    "ng": "ng",
    "start": "ng serve --aot --host localhost --port 5201",
    "start-prod": "ng serve --aot --prod --host localhost --port 5201",
    "lint": "ng lint --type-check",
    "lint-fix": "ng lint --fix --type-check",
    "test": "jest",
    "tdd": "jest --watch",
    "e2e": "ng e2e",
    "docs":
      "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ./docs -t --theme stripe --disableCoverage --hideGenerator -n \"Angular Base Documentation\"",
    "sw": "npm run sw-manifest && npm run sw-copy",
    "sw-manifest": "./node_modules/.bin/ngu-sw-manifest --dist dist --in src/ngsw-manifest.json --out dist/ngsw-manifest.json",
    "sw-copy": "cp node_modules/@angular/service-worker/bundles/worker-basic.min.js dist/",
    "deploy": "npm run sw && ./node_modules/.bin/firebase deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.0.3",
    "@angular/cdk": "5.0.0-rc.1",
    "@angular/common": "5.0.3",
    "@angular/compiler": "5.0.3",
    "@angular/core": "5.0.3",
    "@angular/flex-layout": "2.0.0-beta.10",
    "@angular/forms": "5.0.3",
    "@angular/http": "5.0.3",
    "@angular/material": "5.0.0-rc.1",
    "@angular/platform-browser": "5.0.3",
    "@angular/platform-browser-dynamic": "5.0.3",
    "@angular/router": "5.0.3",
    "@angular/service-worker": "1.0.0-beta.16",
    "@ngrx/effects": "4.1.1",
    "@ngrx/router-store": "4.1.1",
    "@ngrx/store": "4.1.1",
    "@ngrx/store-devtools": "4.1.1",
    "core-js": "2.5.1",
    "hammerjs": "2.0.8",
    "intl": "1.2.5",
    "rxjs": "5.5.2",
    "web-animations-js": "2.3.1",
    "zone.js": "0.8.18"
  },
  "devDependencies": {
    "@angular/cli": "1.5.2",
    "@angular/compiler-cli": "5.0.3",
    "@angular/language-service": "5.0.3",
    "@angular/platform-server": "5.0.3",
    "@compodoc/compodoc": "1.0.4",
    "@types/jasmine": "2.8.2",
    "@types/jasminewd2": "2.0.3",
    "@types/jest": "21.1.6",
    "@types/node": "8.0.53",
    "codelyzer": "4.0.1",
    "firebase-tools": "3.15.2",
    "jasmine-core": "2.8.0",
    "jasmine-spec-reporter": "4.2.1",
    "jest": "21.2.1",
    "jest-preset-angular": "4.0.1",
    "karma": "1.7.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.3.0",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "lite-server": "2.3.0",
    "ng-pwa-tools": "0.0.15",
    "protractor": "5.2.0",
    "rxjs-tslint-rules": "3.1.1",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "tslint-consistent-codestyle": "1.10.0",
    "typescript": "2.4.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/jest/jest-setup.ts",
    "collectCoverageFrom": ["src/**/*.ts", "!jest", "!src/*.ts", "!src/**/*.d.ts", "!src/**/index.ts"],
    "coverageReporters": ["html"]
  }
}
