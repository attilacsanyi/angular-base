{
  "name": "angular-base",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "lite-server": "lite-server",
    "build": "ng build",
    "build-prod": "ng build --prod --build-optimizer",
    "ci": "npm run lint && npm run test && npm run build-prod && npm run ngu",
    "prod": "npm run ci && npm run lite-server",
    "ng": "ng",
    "start": "ng serve --host localhost --port 5201",
    "start-prod": "ng serve --prod --host localhost --port 5201",
    "lint": "ng lint --type-check",
    "lint-fix": "ng lint --fix --type-check",
    "test": "ng test -sr -cc",
    "tdd": "ng test",
    "e2e": "ng e2e",
    "docs": "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ./docs -t --theme stripe --disableCoverage --hideGenerator -n \"Angular Base Documentation\"",
    "ngu": "npm run ngu-app-shell && npm run ngu-sw-manifest && npm run ngu-firebase-push",
    "ngu-app-shell": "./node_modules/.bin/ngu-app-shell --module src/app/app.module.ts --url /loading --insert-module src/app/loading/loading.module.ts --out dist/index.html",
    "ngu-sw-manifest": "./node_modules/.bin/ngu-sw-manifest --module src/app/app.module.ts --out dist/ngsw-manifest.json",
    "ngu-firebase-push": "./node_modules/.bin/ngu-firebase-push --module src/app/app.module.ts --out firebase.json --in firebase-config.json",
    "deploy": "npm run ngu && ./node_modules/.bin/firebase deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "4.4.4",
    "@angular/cdk": "2.0.0-beta.10",
    "@angular/common": "4.4.4",
    "@angular/compiler": "4.4.4",
    "@angular/core": "4.4.4",
    "@angular/flex-layout": "2.0.0-beta.9",
    "@angular/forms": "4.4.4",
    "@angular/http": "4.4.4",
    "@angular/material": "2.0.0-beta.10",
    "@angular/platform-browser": "4.4.4",
    "@angular/platform-browser-dynamic": "4.4.4",
    "@angular/router": "4.4.4",
    "@angular/service-worker": "1.0.0-beta.16",
    "@ngrx/effects": "4.0.5",
    "@ngrx/router-store": "4.0.4",
    "@ngrx/store": "4.0.3",
    "@ngrx/store-devtools": "4.0.0",
    "core-js": "2.5.1",
    "hammerjs": "2.0.8",
    "intl": "1.2.5",
    "rxjs": "5.5.0-beta.2",
    "web-animations-js": "2.3.1",
    "zone.js": "0.8.17"
  },
  "devDependencies": {
    "@angular/cli": "1.4.4",
    "@angular/compiler-cli": "4.4.4",
    "@angular/language-service": "4.4.4",
    "@angular/platform-server": "4.4.4",
    "@compodoc/compodoc": "1.0.1",
    "@types/jasmine": "2.6.0",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "8.0.28",
    "codelyzer": "3.2.0",
    "firebase-tools": "3.13.1",
    "jasmine-core": "2.8.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "1.7.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.3.0",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-phantomjs-launcher": "1.0.4",
    "lite-server": "2.3.0",
    "ng-pwa-tools": "0.0.15",
    "protractor": "5.1.2",
    "rxjs-tslint-rules": "3.0.1",
    "ts-node": "3.3.0",
    "tslint": "5.7.0",
    "tslint-consistent-codestyle": "1.6.0",
    "typescript": "2.5.3"
  }
}
