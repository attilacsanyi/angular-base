{
  "name": "angular-base",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "precommit": "pretty-quick --staged",
    "lite-server": "lite-server",
    "build": "ng build",
    "build-prod": "ng build --prod -e prod --named-chunks --sourcemaps --stats-json",
    "ci": "npm run lint && npm run ci-test",
    "ci-prod": "npm run ci && npm run build-prod",
    "ci-test": "jest --coverage",
    "prod": "npm run ci-prod && npm run lite-server",
    "ng": "ng",
    "start": "ng serve --aot --host localhost --port 5201",
    "start-prod": "ng serve --aot -e prod --host localhost --port 6201",
    "lint": "ng lint --type-check",
    "lint-fix": "ng lint --fix --type-check",
    "test": "jest",
    "tdd": "jest --watch",
    "e2e": "ng e2e",
    "docs":
      "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ./docs -t --theme stripe --disableCoverage --hideGenerator -n \"Angular Base Documentation\"",
    "deploy": "./node_modules/.bin/firebase deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.2.6",
    "@angular/cdk": "5.2.3",
    "@angular/common": "5.2.6",
    "@angular/compiler": "5.2.6",
    "@angular/core": "5.2.6",
    "@angular/flex-layout": "5.0.0-beta.13",
    "@angular/forms": "5.2.6",
    "@angular/http": "5.2.6",
    "@angular/material": "5.2.3",
    "@angular/platform-browser": "5.2.6",
    "@angular/platform-browser-dynamic": "5.2.6",
    "@angular/router": "5.2.6",
    "@angular/service-worker": "5.2.6",
    "@ngrx/effects": "5.1.0",
    "@ngrx/router-store": "5.0.1",
    "@ngrx/store": "5.1.0",
    "@ngrx/store-devtools": "5.1.0",
    "core-js": "2.5.3",
    "hammerjs": "2.0.8",
    "intl": "1.2.5",
    "rxjs": "5.5.6",
    "web-animations-js": "2.3.1",
    "zone.js": "0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "1.7.1",
    "@angular/compiler-cli": "5.2.6",
    "@angular/language-service": "5.2.6",
    "@angular/platform-server": "5.2.6",
    "@compodoc/compodoc": "1.0.8",
    "@types/jasmine": "2.8.6",
    "@types/jasminewd2": "2.0.3",
    "@types/jest": "22.1.3",
    "@types/node": "9.4.6",
    "codelyzer": "4.1.0",
    "husky": "0.14.3",
    "firebase-tools": "3.17.4",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "jest": "22.4.2",
    "jest-preset-angular": "5.2.0",
    "karma": "2.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.4.1",
    "karma-jasmine": "1.1.1",
    "karma-jasmine-html-reporter": "0.2.2",
    "lite-server": "2.3.0",
    "ngrx-store-freeze": "0.2.1",
    "prettier": "1.11.1",
    "pretty-quick": "1.4.1",
    "protractor": "5.3.0",
    "rxjs-tslint-rules": "3.14.0",
    "ts-node": "5.0.0",
    "tslint": "5.9.1",
    "tslint-consistent-codestyle": "1.10.1",
    "typescript": "2.6.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/jest/jest-setup.ts",
    "collectCoverageFrom": ["src/**/*.ts", "!jest", "!src/*.ts", "!src/**/*.d.ts", "!src/**/index.ts"],
    "coverageReporters": ["html"],
    "moduleNameMapper": {
      "^@env": "<rootDir>/src/environments/environment",
      "^@core/(.*)": "<rootDir>/src/app/core/$1",
      "^@shared/(.*)": "<rootDir>/src/app/shared/$1",
      "^@home/(.*)": "<rootDir>/src/app/home/$1",
      "^@dashboard/(.*)": "<rootDir>/src/app/dashboard/$1"
    }
  },
  "prettier": {
    "printWidth": 140,
    "singleQuote": true
  }
}
