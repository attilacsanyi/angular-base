{
  "name": "angular-base",
  "version": "0.0.0",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "prettier": "pretty-quick",
    "lite-server": "lite-server",
    "build": "ng build --configuration local",
    "build-prod": "ng run angular-base:app-shell --configuration production",
    "build-prod-no-ssr": "ng build --configuration production",
    "ci": "yarn lint && yarn test",
    "ci-prod": "yarn ci && yarn build-prod",
    "ci-test": "jest --maxWorkers=4 --ci --coverage --coverageReporters=\"text\" --config jest.json",
    "prod": "yarn ci-prod && yarn lite-server",
    "ng": "ng",
    "start": "ng serve --configuration local --port 5201",
    "start-no-aot": "ng serve --configuration local-no-aot --port 5201",
    "start-prod": "ng serve --configuration production --port 6201",
    "lint": "yarn lint-ts && yarn lint-styles",
    "lint-ts": "ng lint",
    "lint-styles": "stylelint \"**/*.scss\" --fix",
    "test": "jest --config jest.json",
    "test-clear": "jest --clearCache",
    "test-report": "jest --coverage --coverageReporters=\"html\" --config jest.json",
    "tdd": "jest --watch --config jest.json",
    "e2e": "ng e2e",
    "docs": "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ./docs -t --theme stripe --disableCoverage --hideGenerator -n \"Angular Base Documentation\"",
    "deploy": "./node_modules/.bin/firebase deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "8.0.0",
    "@angular/cdk": "7.0.2",
    "@angular/common": "8.0.0",
    "@angular/compiler": "8.0.0",
    "@angular/core": "8.0.0",
    "@angular/flex-layout": "8.0.0-beta.26",
    "@angular/forms": "8.0.0",
    "@angular/http": "7.0.1",
    "@angular/material": "7.0.2",
    "@angular/material-moment-adapter": "7.0.2",
    "@angular/platform-browser": "8.0.0",
    "@angular/platform-browser-dynamic": "8.0.0",
    "@angular/router": "8.0.0",
    "@angular/service-worker": "8.0.0",
    "@ngrx/effects": "6.1.0",
    "@ngrx/router-store": "6.1.0",
    "@ngrx/store": "6.1.0",
    "@ngrx/store-devtools": "6.1.0",
    "core-js": "2.5.7",
    "hammerjs": "2.0.8",
    "moment": "2.22.2",
    "rxjs": "6.5.2",
    "zone.js": "0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.800.0",
    "@angular/cli": "8.0.1",
    "@angular/compiler-cli": "8.0.0",
    "@angular/language-service": "8.0.0",
    "@angular/platform-server": "8.0.0",
    "@compodoc/compodoc": "1.1.5",
    "@nguniversal/module-map-ngfactory-loader": "7.0.2",
    "@types/jest": "23.3.7",
    "@types/node": "10.12.0",
    "codelyzer": "4.5.0",
    "firebase-tools": "6.0.0",
    "husky": "1.1.2",
    "jest": "23.6.0",
    "jest-preset-angular": "6.0.1",
    "lite-server": "2.4.0",
    "ngrx-store-freeze": "0.2.4",
    "prettier": "1.14.3",
    "pretty-quick": "1.8.0",
    "protractor": "5.4.1",
    "rxjs-tslint-rules": "4.10.0",
    "stylelint": "9.6.0",
    "stylelint-config-standard": "18.2.0",
    "ts-loader": "5.2.2",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-consistent-codestyle": "1.13.3",
    "typescript": "3.4.5"
  }
}
