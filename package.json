{
  "name": "angular-base",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "prettier": "pretty-quick",
    "precommit": "pretty-quick --staged",
    "lite-server": "lite-server",
    "build": "ng build --configuration local",
    "build-prod": "ng run angular-base:app-shell --configuration production",
    "build-prod-no-ssr": "ng build --configuration production",
    "ci": "yarn lint && yarn test",
    "ci-prod": "yarn ci && yarn build-prod",
    "ci-test": "jest --maxWorkers=4 --ci --coverage --coverageReporters=\"text\" --config jest.json",
    "prod": "yarn ci-prod && yarn lite-server",
    "ng": "ng",
    "start": "ng serve --configuration local --port 5201",
    "start-no-aot": "ng serve --configuration local-no-aot --port 5201",
    "start-prod": "ng serve --configuration production --port 6201",
    "lint": "yarn lint-ts && yarn lint-styles",
    "lint-ts": "ng lint",
    "lint-styles": "stylelint \"**/*.scss\" --fix",
    "test": "jest --config jest.json",
    "test-report": "jest --coverage --coverageReporters=\"html\" --config jest.json",
    "tdd": "jest --watch --config jest.json",
    "e2e": "ng e2e",
    "docs": "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ./docs -t --theme stripe --disableCoverage --hideGenerator -n \"Angular Base Documentation\"",
    "deploy": "./node_modules/.bin/firebase deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.1.0-beta.2",
    "@angular/cdk": "6.3.0",
    "@angular/common": "6.1.0-beta.2",
    "@angular/compiler": "6.1.0-beta.2",
    "@angular/core": "6.1.0-beta.2",
    "@angular/flex-layout": "6.0.0-beta.16",
    "@angular/forms": "6.1.0-beta.2",
    "@angular/http": "6.1.0-beta.2",
    "@angular/material": "6.3.0",
    "@angular/material-moment-adapter": "6.3.0",
    "@angular/platform-browser": "6.1.0-beta.2",
    "@angular/platform-browser-dynamic": "6.1.0-beta.2",
    "@angular/router": "6.1.0-beta.2",
    "@angular/service-worker": "6.1.0-beta.2",
    "@ngrx/effects": "6.0.1",
    "@ngrx/router-store": "6.0.1",
    "@ngrx/store": "6.0.1",
    "@ngrx/store-devtools": "6.0.1",
    "core-js": "2.5.7",
    "hammerjs": "2.0.8",
    "moment": "2.22.2",
    "rxjs": "6.2.1",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.6.8",
    "@angular/cli": "6.1.0-rc.0",
    "@angular/compiler-cli": "6.1.0-beta.2",
    "@angular/language-service": "6.1.0-beta.2",
    "@angular/platform-server": "6.1.0-beta.2",
    "@compodoc/compodoc": "1.1.3",
    "@nguniversal/module-map-ngfactory-loader": "6.0.0",
    "@types/jest": "23.1.2",
    "@types/node": "10.3.6",
    "codelyzer": "4.4.2",
    "firebase-tools": "3.19.0",
    "husky": "0.14.3",
    "jest": "23.4.0",
    "jest-preset-angular": "5.2.3",
    "lite-server": "2.3.0",
    "ngrx-store-freeze": "0.2.4",
    "prettier": "1.13.6",
    "pretty-quick": "1.6.0",
    "protractor": "5.3.2",
    "rxjs-tslint-rules": "4.4.4",
    "stylelint": "9.3.0",
    "stylelint-config-standard": "18.2.0",
    "ts-loader": "4.4.1",
    "ts-node": "7.0.0",
    "tslint": "5.10.0",
    "tslint-consistent-codestyle": "1.13.1",
    "typescript": "2.7.2"
  }
}
