{
  "name": "angular-base",
  "version": "0.0.0",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "prettier": "pretty-quick",
    "lite-server": "lite-server",
    "build": "ng build --configuration local",
    "build-prod": "ng run angular-base:app-shell --configuration production",
    "build-prod-no-ssr": "ng build --configuration production",
    "ci": "npm-run-all ci-lint ci-test",
    "ci-prod": "npm-run-all --parallel ci build-prod",
    "ci-test": "jest --maxWorkers=4 --ci --coverage --coverageReporters=\"text\" --config jest.json",
    "ci-lint": "npm-run-all ci-lint-ts ci-lint-styles",
    "ci-lint-ts": "ng lint --configuration production",
    "ci-lint-styles": "stylelint \"**/*.scss\"",
    "prod": "npm-run-all ci-prod lite-server",
    "ng": "ng",
    "start": "ng serve --configuration local --port 5201",
    "start-no-aot": "ng serve --configuration local-no-aot --port 5201",
    "start-prod": "ng serve --configuration production --port 6201",
    "lint": "npm-run-all lint-ts lint-styles",
    "lint-ts": "ng lint --configuration local",
    "lint-styles": "stylelint \"**/*.scss\" --fix",
    "test": "jest --config jest.json",
    "test-clear": "jest --clearCache",
    "test-report": "jest --coverage --coverageReporters=\"html\" --config jest.json",
    "tdd": "jest --watchAll --config jest.json",
    "e2e": "ng e2e",
    "docs": "compodoc -p src/tsconfig.app.json -d ./docs -t --theme stripe --disableCoverage --hideGenerator -n \"Angular Base Documentation\"",
    "deploy": "firebase deploy",
    "upgrade-interactive": "npm-check --update"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "8.2.6",
    "@angular/cdk": "8.2.0",
    "@angular/common": "8.2.6",
    "@angular/compiler": "8.2.6",
    "@angular/core": "8.2.6",
    "@angular/flex-layout": "8.0.0-beta.26",
    "@angular/forms": "8.2.6",
    "@angular/material": "8.2.0",
    "@angular/material-moment-adapter": "8.2.0",
    "@angular/platform-browser": "8.2.6",
    "@angular/platform-browser-dynamic": "8.2.6",
    "@angular/pwa": "0.803.4",
    "@angular/router": "8.2.6",
    "@angular/service-worker": "8.2.6",
    "@ngrx/effects": "8.3.0",
    "@ngrx/router-store": "8.3.0",
    "@ngrx/store": "8.3.0",
    "@ngrx/store-devtools": "8.3.0",
    "classlist.js": "1.1.20150312",
    "core-js": "2.6.9",
    "hammerjs": "2.0.8",
    "moment": "2.24.0",
    "rxjs": "6.5.3",
    "zone.js": "0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.803.4",
    "@angular/cli": "8.3.4",
    "@angular/compiler-cli": "8.2.6",
    "@angular/language-service": "8.2.6",
    "@angular/platform-server": "8.2.6",
    "@compodoc/compodoc": "1.1.10",
    "@nguniversal/module-map-ngfactory-loader": "7.1.1",
    "@types/jest": "24.0.18",
    "@types/lodash-es": "4.17.3",
    "@types/node": "12.7.5",
    "codelyzer": "5.1.0",
    "firebase-tools": "6.11.0",
    "husky": "2.3.0",
    "jest": "24.9.0",
    "jest-preset-angular": "7.1.1",
    "lite-server": "2.5.4",
    "npm-check": "5.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "rxjs-tslint-rules": "4.25.0",
    "stylelint": "10.1.0",
    "stylelint-config-standard": "18.3.0",
    "ts-node": "8.3.0",
    "tslint": "5.20.0",
    "tslint-consistent-codestyle": "1.15.1",
    "typescript": "3.5.3"
  }
}
