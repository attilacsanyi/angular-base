{
  "name": "angular-base",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "prettier": "pretty-quick",
    "precommit": "pretty-quick --staged",
    "lite-server": "lite-server",
    "build": "ng build --configuration local",
    "build-prod": "ng build --configuration production",
    "ci": "yarn lint && yarn test",
    "ci-prod": "yarn ci && yarn build-prod",
    "ci-test": "jest --maxWorkers=2 --ci --coverage --coverageReporters=\"text\" --config jest.json",
    "prod": "yarn ci-prod && yarn lite-server",
    "ng": "ng",
    "start": "ng serve --configuration local --port 5201",
    "start-no-aot": "ng serve --configuration local-no-aot --port 5201",
    "start-prod": "ng serve --configuration production --port 6201",
    "lint": "yarn lint-ts && yarn lint-styles",
    "lint-ts": "ng lint",
    "lint-styles": "stylelint \"**/*.scss\" --fix",
    "test": "jest --config jest.json",
    "test-report": "jest --coverage --coverageReporters=\"html\" --config jest.json",
    "tdd": "jest --watch --config jest.json",
    "e2e": "ng e2e",
    "docs":
      "./node_modules/.bin/compodoc -p src/tsconfig.app.json -d ./docs -t --theme stripe --disableCoverage --hideGenerator -n \"Angular Base Documentation\"",
    "deploy": "./node_modules/.bin/firebase deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.0.3",
    "@angular/cdk": "6.1.0",
    "@angular/common": "6.0.3",
    "@angular/compiler": "6.0.3",
    "@angular/core": "6.0.3",
    "@angular/flex-layout": "6.0.0-beta.15",
    "@angular/forms": "6.0.3",
    "@angular/http": "6.0.3",
    "@angular/material": "6.1.0",
    "@angular/material-moment-adapter": "6.1.0",
    "@angular/platform-browser": "6.0.3",
    "@angular/platform-browser-dynamic": "6.0.3",
    "@angular/router": "6.0.3",
    "@angular/service-worker": "6.0.3",
    "@ngrx/effects": "6.0.1",
    "@ngrx/router-store": "6.0.1",
    "@ngrx/store": "6.0.1",
    "@ngrx/store-devtools": "6.0.1",
    "core-js": "2.5.7",
    "hammerjs": "2.0.8",
    "rxjs": "6.2.0",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.6.5",
    "@angular/cli": "6.0.5",
    "@angular/compiler-cli": "6.0.3",
    "@angular/language-service": "6.0.3",
    "@angular/platform-server": "6.0.3",
    "@compodoc/compodoc": "1.0.9",
    "@types/jasmine": "2.8.7",
    "@types/jasminewd2": "2.0.3",
    "@types/jest": "22.2.3",
    "@types/node": "10.1.3",
    "codelyzer": "4.3.0",
    "firebase-tools": "3.18.5",
    "husky": "0.14.3",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "jest": "23.0.0",
    "jest-preset-angular": "5.2.2",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.1.0",
    "lite-server": "2.3.0",
    "ngrx-store-freeze": "0.2.3",
    "prettier": "1.12.1",
    "pretty-quick": "1.6.0",
    "protractor": "5.3.2",
    "rxjs-tslint-rules": "4.3.0",
    "stylelint": "9.2.1",
    "stylelint-config-standard": "18.2.0",
    "ts-node": "6.0.5",
    "tslint": "5.10.0",
    "tslint-consistent-codestyle": "1.13.0",
    "typescript": "2.7.2"
  }
}
